  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('token', response.token);",
                  "    pm.environment.set('userId', response.user.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"developer@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"name\": \"Developer Account\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/api/auth/register",
              "host": ["{{baseURL}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
