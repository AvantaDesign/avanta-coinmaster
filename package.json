{
  "name": "avanta-coinmaster",
  "version": "1.0.0",
  "description": "Sistema de contabilidad personal y empresarial para persona física con actividad empresarial en México",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:frontend": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:api": "vitest run tests/api",
    "test:components": "vitest run tests/components",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report tests/e2e/playwright-report",
    "test:all": "npm run test:run && npm run test:e2e"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-virtual": "^3.13.12",
    "decimal.js": "^10.6.0",
    "jose": "^6.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "tesseract.js": "^6.0.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "happy-dom": "^20.0.7",
    "jsdom": "^27.0.1",
